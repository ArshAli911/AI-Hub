# ========================================
# AI-Hub Production Environment Variables
# Copy this file to .env.production and fill in your values
# ========================================

# ========================================
# Firebase Production Configuration
# ========================================
EXPO_PUBLIC_FIREBASE_API_KEY=your_production_firebase_api_key
EXPO_PUBLIC_FIREBASE_AUTH_DOMAIN=ai-hub-prod.firebaseapp.com
EXPO_PUBLIC_FIREBASE_PROJECT_ID=ai-hub-prod
EXPO_PUBLIC_FIREBASE_STORAGE_BUCKET=ai-hub-prod.appspot.com
EXPO_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your_production_messaging_sender_id
EXPO_PUBLIC_FIREBASE_APP_ID=your_production_app_id
FIREBASE_MEASUREMENT_ID=your_production_measurement_id

# Firebase Admin SDK (Backend only)
FIREBASE_ADMIN_PROJECT_ID=ai-hub-prod
FIREBASE_ADMIN_PRIVATE_KEY_ID=your_private_key_id
FIREBASE_ADMIN_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYour private key here\n-----END PRIVATE KEY-----\n"
FIREBASE_ADMIN_CLIENT_EMAIL=firebase-adminsdk-xxxxx@ai-hub-prod.iam.gserviceaccount.com
FIREBASE_ADMIN_CLIENT_ID=your_client_id
FIREBASE_ADMIN_AUTH_URI=https://accounts.google.com/o/oauth2/auth
FIREBASE_ADMIN_TOKEN_URI=https://oauth2.googleapis.com/token
FIREBASE_ADMIN_AUTH_PROVIDER_X509_CERT_URL=https://www.googleapis.com/oauth2/v1/certs
FIREBASE_ADMIN_CLIENT_X509_CERT_URL=https://www.googleapis.com/robot/v1/metadata/x509/firebase-adminsdk-xxxxx%40ai-hub-prod.iam.gserviceaccount.com

# ========================================
# Stripe Production Configuration
# ========================================
EXPO_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_live_your_production_publishable_key
STRIPE_SECRET_KEY=sk_live_your_production_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_production_webhook_secret
STRIPE_PRICE_ID=price_your_production_price_id
STRIPE_CUSTOMER_PORTAL_URL=https://billing.stripe.com/session/your_portal_url

# ========================================
# Sentry Production Configuration
# ========================================
EXPO_PUBLIC_SENTRY_DSN=https://your_production_sentry_dsn@sentry.io/project_id
SENTRY_ORG=your_sentry_org
SENTRY_PROJECT=ai-hub-prod
SENTRY_AUTH_TOKEN=your_sentry_auth_token

# ========================================
# API Configuration
# ========================================
EXPO_PUBLIC_API_URL=https://api.ai-hub.com
EXPO_PUBLIC_WEBSOCKET_URL=wss://ws.ai-hub.com
API_SECRET_KEY=your_production_api_secret_key
JWT_SECRET=your_production_jwt_secret_key

# ========================================
# Database Configuration
# ========================================
DATABASE_URL=your_production_database_url
DATABASE_PASSWORD=your_production_database_password

# ========================================
# Email Configuration
# ========================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_production_email@gmail.com
SMTP_PASSWORD=your_production_email_password
EMAIL_FROM=noreply@ai-hub.com

# ========================================
# File Storage Configuration
# ========================================
CLOUD_STORAGE_BUCKET=ai-hub-prod-storage
CLOUD_STORAGE_KEY=your_production_storage_key
CLOUD_STORAGE_SECRET=your_production_storage_secret

# ========================================
# Monitoring & Analytics
# ========================================
MONITORING_ENDPOINT=https://monitoring.ai-hub.com
MONITORING_API_KEY=your_production_monitoring_api_key
ANALYTICS_TRACKING_ID=your_production_analytics_id

# ========================================
# Security Configuration
# ========================================
ENCRYPTION_KEY=your_production_encryption_key_32_chars_long
API_KEY=your_production_api_key
CORS_ORIGIN=https://ai-hub.com

# ========================================
# App Configuration
# ========================================
NODE_ENV=production
APP_ENV=production
DEBUG=false
LOG_LEVEL=error

# ========================================
# Feature Flags
# ========================================
ENABLE_BETA_FEATURES=false
ENABLE_EXPERIMENTAL_UI=false
ENABLE_ADVANCED_ANALYTICS=true
ENABLE_AI_TEACHING=true
ENABLE_VIDEO_CALLS=true
ENABLE_OFFLINE_MODE=true

# ========================================
# Rate Limiting
# ========================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ========================================
# Session Configuration
# ========================================
SESSION_SECRET=your_production_session_secret
SESSION_MAX_AGE=86400000

# ========================================
# Backup Configuration
# ========================================
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_STORAGE_BUCKET=ai-hub-backups-prod 